@model ProjectUniconnect.Models.Employer

@{
    ViewData["Title"] = "Delete Employer";   // Set page title
}

<h1>Delete Employer</h1>

<h3>Are you sure you want to delete this employer?</h3>

<div>
    <!-- Display selected employer details -->
    <p><strong>Company:</strong> @Model.CompanyName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<!-- Delete confirmation form -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />      <!-- Hidden field to send Employer ID -->

    <button type="submit">Delete</button>     <!-- Confirm delete -->
    <a asp-action="Index">Cancel</a>          <!-- Cancel and return to list -->
</form>
