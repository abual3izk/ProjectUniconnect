@{
    // Get page title or use default "UniConnect"
    var title = ViewData["Title"] as string ?? "UniConnect";

    // Optional body class (used for custom styling)
    var bodyClass = ViewData["BodyClass"] as string ?? "";

    // Optional theme value (dark/light)
    var bodyTheme = ViewData["BodyTheme"] as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Page title -->
    <title>@title</title>

    <!-- Main site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Page-specific CSS section -->
    @RenderSection("Styles", required: false)
</head>

<body class="@bodyClass" data-theme="@bodyTheme">

    <!-- Main page content -->
    @RenderBody()

    <!-- Global site scripts -->
    <script src="~/js/site.js"></script>

    <!-- Page-specific scripts -->
    @RenderSection("Scripts", required: false)

</body>
</html>
