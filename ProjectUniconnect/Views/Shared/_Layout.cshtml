@{
    var title = ViewData["Title"] as string ?? "UniConnect";
    var bodyClass = ViewData["BodyClass"] as string ?? "";
    var bodyTheme = ViewData["BodyTheme"] as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- CSS الأساسي للموقع لو عندك -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- هنا نرندر CSS الخاص بالصفحة -->
    @RenderSection("Styles", required: false)
</head>

<body class="@bodyClass" data-theme="@bodyTheme">

    <div style="padding: 15px; text-align: right;">
        <a href="/Account/Index"
           style="font-size: 16px; text-decoration:none; color:#1659ff;">
            User Account
        </a>
    </div>


    <!-- جسم الصفحة -->
    @RenderBody()

    <!-- سكربتات عامة -->
    <script src="~/js/site.js"></script>

    <!-- سكربتات خاصة بالصفحة -->
    @RenderSection("Scripts", required: false)

</body>
</html>
